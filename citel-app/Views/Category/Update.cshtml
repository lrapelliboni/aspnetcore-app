@model Category
@{ Layout = "_Layout"; ViewBag.Title = "Update Category";}

<h2>Update Category</h2>
<form method="post">
    <input type="hidden" class="form-control" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    <div class="panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update</button> <a asp-action="Index" class="btn btn-sm btn-warning">Back</a>
    </div>
</form>

<br>

@if (Model.Products.Any())
{
    <h2>Products in this category:</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                </tr>
            }
        </tbody>
    </table>
}